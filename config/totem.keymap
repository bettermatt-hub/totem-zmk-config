#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE 0
#define CODE 1
#define NAV  2
#define MOD  3
#define ADJ  4

/ {
    behaviors {
        hml: homerow_mods_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <300>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };

        hmr: homerow_mods_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <300>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };

        td_bs_pipe: backslash_pipe {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
            layers = <0>;
        };

        LFTSHFT {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <20 10>;
        };

        RTSHFT {
            bindings = <&kp RIGHT_SHIFT>;
            key-positions = <31 19>;
        };

        etr {
            bindings = <&kp ENTER>;
            key-positions = <18 17 16>;
        };

        bksp {
            bindings = <&kp BACKSPACE>;
            key-positions = <9 8>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <13 12 11>;
        };

        layoutsw {
            bindings = <&tog 5>;
            key-positions = <5 15 26 36>;
        };

        lalt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <34 33>;
        };

        ralt {
            bindings = <&kp RIGHT_ALT>;
            key-positions = <36 35>;
        };

        rbkp {
            bindings = <&kp BACKSPACE>;
            key-positions = <4 3>;
        };

        lboot {
            bindings = <&bootloader>;
            key-positions = <4 2 1 0>;
        };

        rboot {
            bindings = <&bootloader>;
            key-positions = <5 7 8 9>;
        };
    };

    macros {
        mac_lock: mac_lock_screen {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI &kp LCTRL>,
                <&macro_pause_for_release>,
                <&macro_tap>,
                <&kp Q>,
                <&macro_release>,
                <&kp LGUI &kp LCTRL>;
        };

        win_lock: win_lock_screen {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_tap>,
                <&kp L>,
                <&macro_release>,
                <&kp LGUI>;
        };

        selall: selall {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp RCTRL>,
                <&macro_tap>,
                <&kp A>,
                <&macro_release>,
                <&kp RCTRL>;

            label = "SELALL";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
           &kp Q  &kp W  &kp E         &kp R  &kp T          &kp Y        &kp U  &kp I          &kp O    &kp P
           &kp A  &kp S  &kp D         &kp F  &kp G          &kp H        &kp J  &kp K          &kp L    &kp SEMICOLON
&kp LCTRL  &kp Z  &kp X  &kp C         &kp V  &kp B          &kp N        &kp M  &kp COMMA      &kp DOT  &kp FSLH       &kp RCTRL
                         &kp LEFT_GUI  &to 1  &lt 3 SPACE    &lt 4 SPACE  &to 2  &kp RIGHT_GUI
            >;
        };

        num_layer {
            bindings = <
               &kp DEL  &kp HOME  &kp UP     &kp END     &kp PG_UP    &kp MINUS  &kp N7  &kp N8    &kp N9  &kp SLASH
               &kp INS  &kp LEFT  &kp DOWN   &kp RIGHT   &kp PG_DN    &kp PLUS   &kp N4  &kp N5    &kp N6  &kp ASTRK
&kp C_AL_CALC  &trans   &trans    &kp COLON  &kp DOLLAR  &trans       &kp EQUAL  &kp N1  &kp N2    &kp N3  &kp DOT    &kp EQUAL
                                  &trans     &trans      &trans       &kp COMMA  &kp N0  &kp BSLH
            >;
        };

        sym_layer {
            bindings = <
            &kp EXCLAMATION  &kp AT         &kp HASH      &kp DOLLAR   &kp PERCENT             &kp C_PREV             &kp C_PP    &kp C_NEXT  &kp C_VOL_UP  &kp C_BRI_UP
            &kp CARET        &kp AMPERSAND  &kp ASTERISK  &trans       &kp LEFT_PARENTHESIS    &kp RIGHT_PARENTHESIS  &trans      &selall     &kp C_VOL_DN  &kp C_BRI_DN
&kp K_REDO  &kp K_UNDO       &kp K_CUT      &kp K_COPY    &kp K_PASTE  &kp LEFT_BRACKET        &kp RIGHT_BRACKET      &kp C_QUIT  &kp PSCRN   &kp C_MUTE    &kp BACKSLASH  &kp C_MENU
                                            &trans        &trans       &trans                  &trans                 &trans      &trans
            >;
        };

        mouse_layer {
            bindings = <
        &trans          &msc SCRL_UP    &mmv MOVE_UP    &mkp LCLK        &mkp RCLK          &kp PG_UP  &kp HOME  &kp UP    &kp END    &kp DEL
        &msc SCRL_LEFT  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &msc SCRL_RIGHT    &kp PG_DN  &kp LEFT  &kp DOWN  &kp RIGHT  &kp INS
&trans  &trans          &msc SCRL_DOWN  &trans          &mkp MB4         &mkp MB5           &trans     &trans    &trans    &kp PSCRN  &kp K_UNDO  &trans
                                        &trans          &kp LSHFT        &kp LCTRL          &trans     &trans    &trans
            >;
        };

        adj_layer {
            bindings = <
        &studio_unlock  &kp F7  &kp F8  &kp F9  &kp F10    &trans  &trans        &trans        &trans        &trans
        &trans          &kp F4  &kp F5  &kp F6  &kp F11    &trans  &bt BT_SEL 4  &trans        &trans        &trans
&trans  &trans          &kp F1  &kp F2  &kp F3  &kp F12    &trans  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_CLR  &bt BT_CLR_ALL
                                &trans  &trans  &trans     &trans  &bt BT_SEL 0  &trans
            >;
        };

        layer_5 {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        layer_6 {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        layer_7 {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        layer_8 {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };
    };
};

&sk {
    release-after-ms = <2000>;
    quick-release;
};
